#!/bin/bash
#------------
. ../SOURCEME
#------------

#------------
export COMMAND_FILE=`basename ${PREFIX}`.cmds
export MASS_RANGE_FILE=`pwd`/mass.ranges

#------------
mkdir -p remove
mv -f crux_match_* match_search_* remove/
ln -fs $FASTA; ln -fs $FASTA_INDEX; ln -fs $MS2;

#------------
/mnt/local/bin/python generate-mass-range.py > $MASS_RANGE_FILE
/mnt/local/bin/python create-search-commands.py $MASS_RANGE_FILE $MS2 $FASTA --parameter-file $PARAM_FILE > $COMMAND_FILE
chmod +x $COMMAND_FILE
./$COMMAND_FILE

